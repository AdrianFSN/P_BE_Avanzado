<%- include('header.ejs') %>

  <!-- Header-->
  <header class="header-wall">
    <div class="container px-4 px-lg-5 my-5">
      <div class="text-center text-white">
        <h1 class="display-4 fw-bolder">
          <%= title %>
        </h1>
        <p class="lead fw-normal text-white-50 mb-0">
          <%= __("Your second hand store") %>
        </p>
      </div>
    </div>
  </header>

  <body>
    <div class="adsPanel-header2">
      <h2>
        <%= panelTitle %>
      </h2>
    </div>

    <div class="adsPanel-card-container">
      <p>
        <% if (adsList.length===0) {%>
          <%= __("We could not find any ad for those criterias...") %>
            <% }%>
      </p>

      <% for (let i=0; i < adsList.length; i++) { %>
        <% const ad=adsList[i]; %>
          <div class="adsPanel-card">

            <% if (ad.image) { %>
              <p>
                <img src="/uploads/adImages/<%= ad.image %>" alt="<%= ad.name %>">
              </p>
              <% } %>

                <h2>
                  <%= ad.name %>
                </h2>

                <div class="adsPanel-badge <%= ad.sale ? 'sale' : 'search' %>">
                  <%= ad.sale ? __("Sell") : __("Buy") %>
                </div>

                <% if (ad.price) { %>
                  <p>
                    <strong>
                      <%= __("Price:") %>
                    </strong>
                    <%= ad.price %> â‚¬
                  </p>
                  <% } %>
                    <% if (ad.tag && ad.tag.length> 0) { %>
                      <p>
                        <strong>
                          <%= __("Category:") %>
                        </strong>
                        <%= ad.tag.map(item=> tagsToLocalizeWithI18n[item] = __(item)).join(', ') %>
                      </p>
                      <% } %>

          </div>
          <% } %>
    </div>
    <%- include('footer') %>
  </body>

  </html>